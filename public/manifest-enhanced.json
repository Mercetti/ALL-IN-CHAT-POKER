  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "share_target": {
    "url": "https://all-in-chat-poker.com/share",
    "method": "POST"
  },
  "protocol_handlers": [
    {
      "protocol": "web+poker",
      "url": "/index.html?game=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "load-game",
      "accept": {
        "application/json": ["poker-game"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "navigate-new"]
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}
