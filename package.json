{
  "name": "poker-game-overlay",
  "version": "1.0.0",
  "description": "Interactive video poker game overlay for Twitch streams",
  "type": "commonjs",
  "main": "server.js",
  "scripts": {
    "build": "npm run build --prefix ./acey-control-center",
    "start": "cross-env PM2_DISABLE_INTERACTION=1 PM2_NO_INTERACTION=1 PM2_NO_PM2_UPDATE_NOTIFICATION=1 pm2 start server.js --no-daemon",
    "dev": "cross-env NODE_ENV=development node server.js",
    "prod": "cross-env NODE_ENV=production node server.js",
    "acey:dev": "npm-run-all --parallel dev test:watch",
    "acey:helper": "node ./tools/acey-dev-helper.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --config jest.config.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch --setupFilesAfterEnv tests/jest-setup.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit --audit-level high",
    "security:check": "node -e \"const validator = require('./server/config-validator'); validator.printValidationReport();\"",
    "env:validate": "node scripts/validate-env.js validate",
    "env:check": "node scripts/validate-env.js check",
    "env:example": "node scripts/validate-env.js example",
    "env:summary": "node scripts/validate-env.js summary",
    "env:all": "node scripts/validate-env.js all",
    "deploy": "node pre-deploy-check.js && fly deploy -a all-in-chat-poker --strategy immediate",
    "deploy:safe": "node pre-deploy-check.js && fly deploy -a all-in-chat-poker --strategy immediate",
    "deploy:smart": "smart-deploy.bat",
    "deploy:monitor": "node auto-deploy-monitor.js",
    "deploy:rollback": "./deploy.sh --rollback",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "logs": "tail -f logs/app.log",
    "predeploy": "node pre-deploy-check.js",
    "syntax": "node -c server.js",
    "check": "node pre-deploy-check.js",
    "backup": "cp data/data.db backups/data_$(date +%Y%m%d_%H%M%S).db",
    "desktop": "electron electron/main.js",
    "control:center": "npm run dev --prefix ./apps/ai-control-center",
    "control:electron": "npm run start --prefix ./apps/ai-control-center",
    "dev:start": "start-dev.bat",
    "dev:smart": "smart-start-dev.bat",
    "dev:bg": "smart-start-dev-bg.bat",
    "dev:simple": "start-simple.bat",
    "dev:interactive": "smart-start-dev-interactive.bat",
    "dev:stop": "stop-all-dev.bat",
    "dev:status": "dev-status.bat",
    "dev:live": "dev-status-live.bat",
    "dev:kill": "kill-port-5173.bat",
    "dev:watch": "node auto-watch.js",
    "dev:monitor": "node auto-deploy-monitor.js",
    "dev:all": "smart-start-dev-bg.bat",
    "start:everything": "node startup-everything.js",
    "test-acey": "cross-env NODE_ENV=test jest server/aceyEngine.test.js server/acey-websocket.test.js",
    "test:websocket": "cross-env NODE_ENV=test jest tests/acey-websocket.test.js",
    "test:overlay": "cross-env NODE_ENV=test jest tests/overlay-components.test.js tests/overlay-integration.test.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen",
    "test:performance": "playwright test tests/performance/benchmarks.spec.js",
    "test:load": "node tests/performance/load-testing.js",
    "test:stress": "node -e \"const LoadTester = require('./tests/performance/load-testing.js'); const tester = new LoadTester({ concurrentUsers: 50, testDuration: 60000 }); tester.runStressTest();\"",
    "test:spike": "node -e \"const LoadTester = require('./tests/performance/load-testing.js'); const tester = new LoadTester(); tester.runSpikeTest().then(console.log);\"",
    "docs:lint": "npx markdownlint-cli --fix AI_AUDIO_GENERATION_GUIDE.md COSMETIC_GENERATOR_GUIDE.md docs/acey-*.md",
    "docs:lint:setup": "bash scripts/setup-docs-lint.sh"
  },
  "keywords": [
    "poker",
    "twitch",
    "overlay",
    "game",
    "video-poker"
  ],
  "author": "Mercetti",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "cookie-parser": "^1.4.7",
    "diff": "^5.2.0",
    "discord.js": "^14.25.1",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jpeg-js": "^0.4.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "8.11.5",
    "pm2": "^5.4.3",
    "pngjs": "^7.0.0",
    "socket.io": "^4.6.1",
    "tmi.js": "^1.8.5",
    "tweetnacl": "^1.0.3",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-packager": "^17.1.2",
    "eslint": "^9.39.2",
    "globals": "^15.13.0",
    "htmlhint": "^1.8.0",
    "jest": "^29.7.0",
    "jsdom": "^27.4.0",
    "markdownlint-cli": "^0.47.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
