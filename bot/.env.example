# Twitch bot identity
BOT_USERNAME=your_bot_username
BOT_OAUTH_TOKEN=oauth:your_twitch_irc_token

# Channels to join (comma separated, no #). Can be empty if using backend-driven channels.
TARGET_CHANNELS=yourchannel

# Backend configuration
BACKEND_URL=https://all-in-chat-poker.fly.dev
ADMIN_TOKEN=your_admin_bearer_token
BOT_JOIN_SECRET=your_shared_secret_for_chat_bets

# Discord bot (optional)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_application_id
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_ALLOWED_CHANNELS=comma_separated_channel_ids_optional
DISCORD_OPS_CHANNEL_ID=optional_ops_channel_id
DISCORD_ADMIN_USERS=comma_separated_discord_user_ids
DEPLOY_WEBHOOK_URL=optional_deploy_webhook
