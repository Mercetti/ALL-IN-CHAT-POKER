{
  "name": "helm-control-windows",
  "version": "1.0.0",
  "description": "Helm Control Windows Desktop Application - Professional AI Control Center",
  "main": "src/main.js",
  "homepage": "./",
  "author": "Helm Control Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "electron . --dev",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "electron-builder",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --win --x64 --ia32",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "axios": "^1.6.2",
    "socket.io-client": "^4.7.4",
    "chart.js": "^4.4.1",
    "react-chartjs-2": "^5.2.0",
    "date-fns": "^3.0.6",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "vite": "^5.0.10",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "@mui/material": "^5.15.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/x-charts": "^6.18.1",
    "@mui/x-data-grid": "^6.18.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.helmcontrol.windows",
    "productName": "Helm Control",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "publisherName": "Helm Control"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Helm Control"
    },
    "portable": {
      "artifactName": "helm-control-portable.exe"
    }
  },
  "keywords": [
    "helm-control",
    "ai-control",
    "electron",
    "react",
    "windows",
    "desktop",
    "ai-orchestration",
    "skill-management"
  ]
}
