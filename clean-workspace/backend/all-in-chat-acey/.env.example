# Development Environment Configuration
# Copy this file to .env and update values for your local development

# Application Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=debug
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
TRUST_PROXY=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=acey_development
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=acey:dev:
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3

# WebSocket Configuration
WS_PORT=8081
WS_PATH=/mesh/ws
WS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://acey-control-center.com
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_TIMEOUT=5000

# Security Configuration
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_minimum_32_characters_long
ENCRYPTION_KEY=your_encryption_key_minimum_32_characters_long

# Firebase Cloud Messaging (FCM)
FCM_SERVER_KEY=your_fcm_server_key_here
FCM_PROJECT_ID=your_fcm_project_id_here

# Apple Push Notification Service (APNS)
APNS_KEY_ID=your_apns_key_id_here
APNS_TEAM_ID=your_apns_team_id_here
APNS_BUNDLE_ID=com.acey.controlcenter
APNS_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
your_apns_private_key_here
-----END PRIVATE KEY-----

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

GRAFANA_ENABLED=true
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Additional Development Settings
DEBUG=acey:*
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
