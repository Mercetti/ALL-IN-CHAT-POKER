# Production Environment Configuration Template
# Copy this file to .env and update all values before deploying

# Application Settings
NODE_ENV=production
PORT=3000

# Security Settings (REQUIRED - CHANGE THESE!)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
ADMIN_PASSWORD=your-secure-admin-password-at-least-12-characters
ADMIN_TOKEN=your-secure-admin-token-at-least-20-characters

# Database Settings
DB_FILE=/opt/data/data.db

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Flags
ENFORCE_ADMIN_CSRF=true
ALLOW_INSECURE_DEFAULTS=false
ENABLE_OWNER_BOOTSTRAP=false

# Authentication Settings
OWNER_LOGIN=your-twitch-username
OWNER_BOOT_PASSWORD=secure-owner-password
CHECKOUT_SIGNING_SECRET=your-checkout-signing-secret

# Admin Settings
ADMIN_ALLOW_LOGINS=your-twitch-username,other-admin-username
ADMIN_ALLOW_EMAILS=your-email@example.com
ALLOW_ADMIN_QUERY_TOKEN=false
ALLOW_USER_JWT_ADMIN_FALLBACK=false

# Banning Settings
BANNED_LOGINS=
BANNED_IPS=

# Service Integrations (Optional but Recommended)
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret
OPENAI_API_KEY=your-openai-api-key
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Performance (Optional)
ENABLE_CLUSTERING=true
CLUSTER_WORKERS=0

# SSL/HTTPS (if using reverse proxy)
TRUST_PROXY=true
X_FORWARDED_PROTO=https

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Settings
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/opt/uploads

# Email Settings (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Feature Flags
ENABLE_TWITCH_INTEGRATION=true
ENABLE_AI_FEATURES=true
ENABLE_TOURNAMENTS=true
ENABLE_COSMETICS=true

# Development Overrides (DO NOT USE IN PRODUCTION)
# ALLOW_INSECURE_DEFAULTS=true
# ENABLE_OWNER_BOOTSTRAP=true
# ENFORCE_ADMIN_CSRF=false
