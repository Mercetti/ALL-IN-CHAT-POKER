{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "checkJs": true,
    "rootDir": ".",
    "outDir": "./.tsbuild",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "types": ["node"],
    "target": "ES2020"
  },
  "include": ["electron/**/*"]
}
